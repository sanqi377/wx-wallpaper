.bigImg {
    width: 100%;
    height: 100vh;
}

.bigImg image {
    width: 100%;
    height: 100vh;
}

.bigImg swiper {
    height: 100vh;
}

.bigImg swiper swiper-item {
    white-space: nowrap;
}

.tools {
    position: absolute;
    bottom: 40rpx;
    width: 80%;
    left: 50%;
    transform: translateX(-50%);
}

.tools .content {
    width: 100%;
    display: flex;
    justify-content: space-evenly;
    background: rgb(0, 0, 0,.5);
    padding: 8px 0;
    border-radius: 10px;
}

.tools .content view {
    color: #ffffff;
    font-size: 12px;
    display: inline-block;
}
.tools .content image{
    width: 25px;
    height: 25px;
}