.container {
    display: flex;
    width: 100%;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 0;
    margin-top: 55px;
}

.container .item {
    width: 30%;
}

.container::after {
    content: "";
    display: flex;
    width: 30%;
}

.container image {
    width: 100%;
    margin-bottom: 15px;
    border-radius: 10px;
}

image {
    opacity: 0;
}

.active {
    opacity: 1;
}

.tabs {
    position: fixed;
    top: 0;
    left: 0;
}