/* pages/task/index.wxss */
.task .header{
  margin-top: 60px;
  height: 150px;
  border-radius: 15px;
  background: linear-gradient(to right, #5596f6, #8969f9);
  box-shadow: 0 10px 20px #c1d1fb;
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.task .header image{
  position: absolute;
  top: -40px;
  width: 80px;
  height: 80px;
}
.task .header .number{
  color: white;
  font-size: 35px;
  font-weight: bold;
  padding: 15px;
}
.task .header .tips{
  color: #b8bffb;
}
.task .steps{
  margin-top: 50px;
  padding: 0 10px;
}
.task .line-step{
  background: none;
}
.task .step{
  width: 45px;
  height: 45px;
  border-radius: 50%;
  font-size: 16px;
  color: white;
  background: linear-gradient(to right, #5596f6, #8969f9);
}
.task .list{
  min-height: 80px;
  border: none;
}
.task .list image{
  width: 45px !important;
  height: 45px !important;
  border-radius: 50%;
}
.task .list .list-text{
  font-size: 18px;
  color: #000;
  padding: 5px 0;
}
.task .list .list-desc-text{
  font-size: 16px !important;
  color: #929394 !important;
}