<view class="task">
	<view class="container">
		<view class="header">
			<image src="/public/ico/task-mn.png"></image>
			<view class="number">0</view>
			<view class="tips">当前可用积分</view>
		</view>
		<view class="steps">
			<l-steps active-index="3">
				<l-step l-line-class="line-step" l-step-class="step"></l-step>
				<l-step l-line-class="line-step" l-step-class="step"></l-step>
				<l-step l-line-class="line-step" l-step-class="step"></l-step>
				<l-step l-line-class="line-step" l-step-class="step"></l-step>
				<l-step l-line-class="line-step" l-step-class="step"></l-step>
				<l-step l-line-class="line-step" l-step-class="step"></l-step>
				<l-step l-line-class="line-step" l-step-class="step"></l-step>
			</l-steps>
		</view>
		<view class="task-list">
			<view class="title">
				积分任务
			</view>
			<l-list title="每日签到" image="/public/ico/my-sign.png" desc="+5积分/天" l-class="list"
				l-content-class="list-text" l-desc-class="list-desc-text" />
			<l-list title="邀请好友" image="/public/ico/my-xinxi.png" desc="+5积分/天" l-class="list" l-desc-class="list-desc-text" l-content-class="list-text" />
			<l-list title="看广告" image="/public/ico/task-ad.png" l-class="list" desc="+5积分/天" desc="+5积分/天" l-class="list" l-desc-class="list-desc-text" l-content-class="list-text"/>
			<l-list title="添加到我的桌面" image="/public/ico/task-add.png" l-class="list" desc="+5积分/天" desc="+5积分/天" l-class="list" l-desc-class="list-desc-text" l-content-class="list-text"	/>
		</view>
	</view>
</view>