.content swiper {
    height: 100vh;
}

.content image {
    width: 100%;
    height: 100vh;
}

.footer {
    position: absolute;
    bottom: 35px;
    left: 50%;
    width: 80%;
    padding: 5px 15px;
    transform: translateX(-50%);
    background: rgb(0, 0, 0, .8);
    border-radius: 10px;
    color: #5d5c5d;
    font-size: 13px;
}

.footer .item {
    display: flex;
    justify-content: space-around;
}

.footer .item view image {
    transform: translateX(3px);
    width: 20px;
    height: 20px;
}

.footer .item view text {
    display: block;
}

.poster {
    position: absolute;
    top: 50%;
    left: 50%;
    box-shadow: 0 0 20px 6px rgb(0, 0, 0, .5);
    background: #ffffff;
}