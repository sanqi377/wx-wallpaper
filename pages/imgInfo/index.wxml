<view class="content">
    <swiper circular current="{{index}}">
        <swiper-item wx:for="{{value}}">
            <image src="{{item}}" />
        </swiper-item>
    </swiper>
</view>
<view class="footer">
    <view class="item">
        <view bindtap="back">
            <image src="/public/ico/bigimg-back.png" />
            <text>返回</text>
        </view>
        <view>
            <image src="/public/ico/bigimg-collect.png" />
            <text>收藏</text>
        </view>
        <view>
            <image src="/public/ico/bigimg-dowload.png" />
            <text>下载</text>
        </view>
        <view>
            <image src="/public/ico/bigimg-playbill.png" />
            <text>海报</text>
        </view>
        <view>
            <image src="/public/ico/bigimg-share.png" />
            <text>分享</text>
        </view>
    </view>
</view>