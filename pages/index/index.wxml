<view class="container">
    <view class="header">
        <view class="logo">猫耳壁纸</view>
        <l-search-bar l-container-class="search" placeholder="搜索想要的壁纸" show-cancel="{{false}}" bg-color="#f4f5f7"
            shape="circle" />
        <view class="swiper">
            <swiper bindchange="swiperChange" previous-margin="25rpx" next-margin="25rpx" indicator-dots
                indicator-color="#000000" circular indicator-active-color="#FFFFFF" autoplay>
                <swiper-item wx:for="{{img}}">
                    <image src="{{item.src}}" class="{{swiperIndex == index ? 'active' : ''}}" mode="widthFix" />
                </swiper-item>
            </swiper>
        </view>
    </view>
    <view class="todayImg">
        <view class="header">
            <view>每日壁纸</view>
            <view class="yesterday">往日</view>
        </view>
        <view class="content">
            <scroll-view scroll-x="{{true}}" enable-flex="{{true}}">
                <view wx:for="{{todayImg}}">
                    <image src="{{item}}" data-type="today" data-index="{{index}}" catchtap="ImgInfo" />
                </view>
                <!-- <view>昨日壁纸</view> -->
            </scroll-view>
        </view>
    </view>
    <view class="main">
        <l-segment bind:linchange="changeTabs" animated-for-line l-class="tabs">
            <l-segment-item tab="热门壁纸" key="hot" />
            <l-segment-item tab="猜你喜欢" key="love" />
            <l-segment-item tab="最新壁纸" key="new" />
        </l-segment>
        <l-toast show="{{show}}" icon="loading" title="加载中" />
        <view class="hotImg">
            <block wx:for="{{hotImg}}">
                <l-transition show="{{!show}}">
                    <image src="{{item}}" data-type="index" data-index="{{index}}" catchtap="ImgInfo" />
                </l-transition>
            </block>
            <l-loadmore show="{{buttomLoad}}" type="loading" loading-text="加载中"></l-loadmore>
            <l-loadmore show="{{buttom}}" type="end" end-text="已经到底了" line></l-loadmore>
        </view>
    </view>
</view>
<tabber></tabber>