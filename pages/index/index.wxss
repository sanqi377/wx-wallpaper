.header .logo {
    font-size: 22px;
}

.header .swiper swiper-item {
    display: flex;
    justify-content: center;
    border-radius: 10px;
}

.header .swiper image {
    width: 100%;
    height: 100%;
    border-radius: 10px;
    margin: 0 5px;
}

.main l-segment {
    display: block;
    margin-bottom: 15px;
}

.main l-loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    justify-content: center;
}

.main l-transition {
    width: 30%;
}

.main l-transition::after {
    content: "";
    display: flex;
}

.main l-loadmore {
    width: 100%;
    display: flex;
    justify-content: center;
}

.main .hotImg {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
}

.main .hotImg image {
    width: 100%;
    border-radius: 10px;
    margin-bottom: 10px;
}